<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bgc_button_active"/>
            <corners android:bottomLeftRadius="@dimen/corner_button_dialog"
                android:bottomRightRadius="@dimen/corner_button_dialog"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/bgc_button_active"/>
            <corners android:bottomLeftRadius="@dimen/corner_button_dialog"
                android:bottomRightRadius="@dimen/corner_button_dialog"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bgc_button_inactive"/>
            <corners android:bottomLeftRadius="@dimen/corner_button_dialog"
                android:bottomRightRadius="@dimen/corner_button_dialog"/>
        </shape>
    </item>
</selector>