<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Title">
        <item name="android:textSize">@dimen/ts_title</item>
        <item name="android:textColor">@color/txc_title</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="TextField">
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:layout_marginTop">@dimen/margin_edit_text_login_page</item>
        <item name="android:layout_marginBottom">@dimen/margin_edit_text_login_page</item>
        <item name="android:layout_marginRight">@dimen/margin_edit_text_login_page</item>
        <item name="android:layout_marginLeft">@dimen/margin_edit_text_login_page</item>
        <item name="android:paddingTop">@dimen/padding_y_edit_text_login_page</item>
        <item name="android:paddingBottom">@dimen/padding_y_edit_text_login_page</item>
        <item name="android:paddingRight">@dimen/padding_x_edit_text_login_page</item>
        <item name="android:paddingLeft">@dimen/padding_x_edit_text_login_page</item>
        <item name="android:textSize">@dimen/ts_common</item>
        <item name="android:textColor">@color/txc_default_text</item>
    </style>

    <style name="TextButton">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/color_state_text_button</item>
        <item name="android:textSize">@dimen/ts_text_button</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@drawable/color_state_button_text</item>
        <item name="android:layout_marginTop">@dimen/margin_button</item>
        <item name="android:layout_marginBottom">@dimen/margin_button</item>
        <item name="android:layout_marginLeft">@dimen/margin_button</item>
        <item name="android:layout_marginRight">@dimen/margin_button</item>
    </style>

    <style name="Button.Dialog" parent="Button">
        <item name="android:background">@drawable/background_dialog_button</item>
        <item name="android:textColor">@drawable/color_state_button_text</item>
        <item name="android:layout_marginTop">@dimen/margin_dialog_button</item>
        <item name="android:layout_marginBottom">@dimen/margin_dialog_button</item>
        <item name="android:layout_marginLeft">@dimen/margin_dialog_button</item>
        <item name="android:layout_marginRight">@dimen/margin_dialog_button</item>
    </style>

    <style name="MapButton" parent="Button">
        <item name="android:background">@drawable/background_map_button</item>
        <item name="android:layout_marginTop">@dimen/margin_btn_map</item>
        <item name="android:layout_marginBottom">@dimen/margin_btn_map</item>
        <item name="android:layout_marginLeft">@dimen/margin_btn_map</item>
        <item name="android:layout_marginRight">@dimen/margin_btn_map</item>
    </style>

    <style name="TextFieldEdit" parent="style/Widget.AppCompat.EditText">
        <item name="android:layout_marginTop">@dimen/margin_edit_text_login_page</item>
        <item name="android:layout_marginBottom">@dimen/margin_edit_text_login_page</item>
        <item name="android:layout_marginRight">@dimen/margin_edit_text_login_page</item>
        <item name="android:layout_marginLeft">@dimen/margin_edit_text_login_page</item>
        <item name="android:paddingTop">@dimen/padding_y_edit_text_login_page</item>
        <item name="android:paddingBottom">@dimen/padding_y_edit_text_login_page</item>
        <item name="android:paddingRight">@dimen/padding_x_edit_text_login_page</item>
        <item name="android:paddingLeft">@dimen/padding_x_edit_text_login_page</item>
        <item name="android:textSize">@dimen/ts_common</item>
        <item name="android:textColor">@color/txc_default_text</item>
    </style>

    <style name="EditTextField">
        <item name="android:background">@drawable/background_edit_text</item>
        <item name="android:layout_marginTop">@dimen/margin_edit_text_login_page</item>
        <item name="android:layout_marginBottom">@dimen/margin_edit_text_login_page</item>
        <item name="android:layout_marginRight">@dimen/margin_edit_text_login_page</item>
        <item name="android:layout_marginLeft">@dimen/margin_edit_text_login_page</item>
        <item name="android:paddingTop">@dimen/padding_y_edit_text_login_page</item>
        <item name="android:paddingBottom">@dimen/padding_y_edit_text_login_page</item>
        <item name="android:paddingRight">@dimen/padding_x_edit_text_login_page</item>
        <item name="android:paddingLeft">@dimen/padding_x_edit_text_login_page</item>
        <item name="android:textColor">@color/txc_edit_text_content</item>
    </style>

    <style name="DialogButton">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@drawable/color_state_button_text</item>
        <item name="android:layout_marginTop">@dimen/margin_button</item>
        <item name="android:layout_marginBottom">@dimen/margin_button</item>
        <item name="android:layout_marginLeft">@dimen/margin_button</item>
        <item name="android:layout_marginRight">@dimen/margin_button</item>
        <item name="android:paddingLeft">@dimen/padding_button_horizontal</item>
        <item name="android:paddingRight">@dimen/padding_button_horizontal</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
